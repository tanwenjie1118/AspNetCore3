{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Hangfire": "Information"
    }
  },
  "AllowedHosts": "*",
  "StartupOption": {
    "Cors": {
      "IPs": ""
    },
    "ApiName": "AspNetCore3",
    "Jwt": {
      "Secret": "1223yy4f5f4hduiasds65as5d1asjdashs41s1ddaw", // length must greater than 16
      "Issuer": "AspNetCore3",
      "Audience": "api_user"
    },
    "ConsulService": {
      "ServerHost": "http://127.0.0.1:8500/",
      "ClientHost": "127.0.0.1",
      "ClientName": "AspNetCore3.1",
      "ClientPort": 5000,
      "HealthCheckHttp": "http://host.docker.internal:5000/health"
    }
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "IpWhitelist": [], //white list
    "EndpointWhitelist": [ "get:/api/xxx", "*:/api/yyy" ],
    "ClientWhitelist": [ "dev-client-1", "dev-client-2" ],
    "HttpStatusCode": 429, // status code
    "GeneralRules": [ //api rules,take * in the end
      {
        "Endpoint": "*:/api/blog*",
        "Period": "1m",
        "Limit": 20
      },
      {
        "Endpoint": "*:/user*",
        "Period": "1s",
        "Limit": 10
      },
      {
        "Endpoint": "*/api/*",
        "Period": "1m",
        "Limit": 30
      },
      {
        "Endpoint": "*/api/*",
        "Period": "12h",
        "Limit": 500
      }
    ]
  },
  "CacheOption": {
    "RedisConnection": "myredis_demo"
  },
  "DatabaseOption": {
    "Mongodb": {
      "Conn": "mongodb://localhost:27017",
      "Ssl": false,
      "dbNo": 1
    },
    "Sqlite": {
      "Conn": "Data Source=mydb.db;"
    },
    "MySql": {
      "Conn": "server=mysql_demo;uid=root;pwd=123456;database=MyEfCoreTest;"
    }
